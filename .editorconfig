# Normalize whitespace across editors/IDEs.

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,mdx}]
# Preserve trailing spaces in Markdown for line breaks.
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.{js,mjs,json}]
quote_type = double
